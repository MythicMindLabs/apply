# EchoPay-2 Environment Variables
# Copy this file to .env and fill in your values

# Polkadot Network Configuration
VITE_POLKADOT_WS_URL=wss://rpc.polkadot.io
VITE_WESTEND_WS_URL=wss://westend-rpc.polkadot.io  
VITE_ROCOCO_WS_URL=wss://rococo-rpc.polkadot.io
VITE_LOCAL_WS_URL=ws://127.0.0.1:9944

# Default network (polkadot, westend, rococo, local)
VITE_DEFAULT_NETWORK=westend

# ElevenLabs API Configuration (optional - for enhanced voice synthesis)
VITE_ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
VITE_ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Smart Contract Configuration
VITE_CONTRACT_ADDRESS=your_deployed_contract_address_here

# Application Configuration
VITE_APP_NAME=EchoPay-2
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Voice-activated payments for Polkadot"

# Feature Flags
VITE_ENABLE_VOICE_SYNTHESIS=true
VITE_ENABLE_TRANSACTION_HISTORY=true
VITE_ENABLE_CROSS_CHAIN=false
VITE_DEBUG_MODE=false

# Analytics (optional)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=your_analytics_id

# Error Reporting (optional)
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_ENABLE_ERROR_REPORTING=false