{
  "name": "echopay-2",
  "version": "1.0.0",
  "description": "Voice-activated payment dApp for Polkadot ecosystem",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "typecheck": "tsc --noEmit",
    "contracts:build": "./scripts/build-contracts.sh",
    "contracts:test": "cd contracts && cargo test",
    "deploy": "./scripts/deploy.sh"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@polkadot/api": "^10.11.2",
    "@polkadot/extension-dapp": "^0.46.6",
    "@polkadot/api-contract": "^10.11.2",
    "@polkadot/util": "^12.6.1",
    "@polkadot/util-crypto": "^12.6.1",
    "@polkadot/keyring": "^12.6.1",
    "react-router-dom": "^6.8.1",
    "axios": "^1.6.0",
    "react-hot-toast": "^2.4.1",
    "lucide-react": "^0.294.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@vitest/coverage-v8": "^1.0.4",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.6",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16",
    "jsdom": "^23.0.1"
  },
  "keywords": [
    "polkadot",
    "voice-payments",
    "blockchain",
    "accessibility",
    "web3",
    "cryptocurrency",
    "dapp",
    "react",
    "typescript"
  ],
  "author": {
    "name": "EchoPay Team",
    "email": "team@echopay.io",
    "url": "https://echopay.io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YanniWu88/EchoPay-2.git"
  },
  "bugs": {
    "url": "https://github.com/YanniWu88/EchoPay-2/issues"
  },
  "homepage": "https://echopay.io",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}