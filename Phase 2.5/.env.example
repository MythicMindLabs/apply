# EchoPay-2 Environment Configuration Template
# Copy this file to .env and fill in your values
# =====================================
# BLOCKCHAIN CONFIGURATION
# =====================================
# Polkadot RPC Endpoints
VITE_WS_PROVIDER=wss://rococo-contracts-rpc.polkadot.io
VITE_NETWORK_NAME=Rococo Contracts
# Contract Addresses (deployed contracts)
VITE_CONTRACT_ADDRESS=your-contract-address-here
VITE_PAYMENT_RECORDER_ADDRESS=your-payment-contract-here
# Network Configuration
VITE_CHAIN_ID=42
VITE_EXPLORER_URL=https://rococo-contracts.subscan.io/
# =====================================
# EXTERNAL SERVICE APIs
# =====================================
# ElevenLabs API (Text-to-Speech)
VITE_ELEVENLABS_API_KEY=your-elevenlabs-api-key
VITE_ELEVENLABS_VOICE_ID=Rachel
# Speech Recognition Service (Optional)
VITE_SPEECH_API_KEY=your-speech-api-key
VITE_SPEECH_SERVICE_URL=https://api.speechservice.com
# Currency Exchange API
VITE_EXCHANGE_API_KEY=your-exchange-api-key
VITE_EXCHANGE_API_URL=https://api.exchangeratesapi.io/v1/
# =====================================
# APPLICATION SETTINGS
# =====================================
# Development Mode
VITE_DEBUG_MODE=true
VITE_MOCK_MODE=true
VITE_LOG_LEVEL=debug
# Performance Monitoring
VITE_PERFORMANCE_MONITORING=true
VITE_ERROR_TRACKING=true
# Security Settings
VITE_VOICE_BIOMETRIC_ENABLED=true
VITE_RATE_LIMIT_ENABLED=true
VITE_ENCRYPTION_ENABLED=true
# =====================================
# ANALYTICS & MONITORING
# =====================================
# Analytics Service
VITE_ANALYTICS_ID=your-analytics-id
VITE_ANALYTICS_ENABLED=false
# Error Tracking (Sentry)
VITE_SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_ENABLED=false
# Performance Monitoring
VITE_APM_SERVICE_URL=your-apm-service-url
VITE_APM_ENABLED=false
# =====================================
# FEATURE FLAGS
# =====================================
# Voice Features
VITE_VOICE_COMMANDS_ENABLED=true
VITE_TTS_ENABLED=true
VITE_VOICE_BIOMETRIC_ENABLED=true
# UI Features
VITE_DARK_MODE_ENABLED=true
VITE_ACCESSIBILITY_ENHANCED=true
VITE_MOBILE_OPTIMIZED=true
# Experimental Features
VITE_XCM_ENABLED=false
VITE_MULTI_CHAIN_ENABLED=false
VITE_AI_ASSISTANT_ENABLED=false
# =====================================
# SECURITY CONFIGURATION
# =====================================
# Rate Limiting
VITE_RATE_LIMIT_REQUESTS_PER_HOUR=100
VITE_RATE_LIMIT_BURST=10
# Session Management
VITE_SESSION_TIMEOUT=3600000
VITE_AUTO_LOCK_TIMEOUT=1800000
# Encryption
VITE_ENCRYPTION_KEY_SIZE=256
VITE_HASH_ALGORITHM=SHA-256
