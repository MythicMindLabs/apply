{
  "name": "echopay-2",
  "version": "1.0.0",
  "description": "Voice-activated Polkadot payment system for accessibility - Milestone 1 Complete",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build", 
    "preview": "vite preview",
    "test": "jest",
    "test:ci": "jest --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,md}'",
    "setup": "npm install && npm run contracts:install",
    "contracts:install": "cd contracts/payment_recorder && cargo build",
    "contracts:build": "cd contracts/payment_recorder && cargo contract build",
    "contracts:deploy": "cd contracts/payment_recorder && cargo contract instantiate --suri //Alice --args --skip-confirm",
    "contracts:test": "cd contracts/payment_recorder && cargo test",
    "start:node": "substrate-contracts-node --dev --tmp",
    "validate": "npm run type-check && npm run lint && npm run test:ci && npm run build"
  },
  "keywords": [
    "polkadot",
    "voice-recognition",
    "accessibility", 
    "web3",
    "blockchain",
    "payments",
    "substrate",
    "ink-smart-contracts",
    "react",
    "typescript"
  ],
  "author": "EchoPay-2 Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MythicMindLabs/apply.git"
  },
  "bugs": {
    "url": "https://github.com/MythicMindLabs/apply/issues"
  },
  "homepage": "https://github.com/MythicMindLabs/apply#readme",
  "dependencies": {
    "@polkadot/api": "^10.9.1",
    "@polkadot/api-contract": "^10.9.1",
    "@polkadot/extension-dapp": "^0.46.5",
    "@polkadot/extension-inject": "^0.46.5",
    "@polkadot/types": "^10.9.1",
    "@polkadot/util": "^12.4.2",
    "@polkadot/util-crypto": "^12.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "lucide-react": "^0.263.1",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/node": "^20.5.0",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/user-event": "^14.4.3",
    "@playwright/test": "^1.37.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "prettier": "^3.0.0",
    "identity-obj-proxy": "^3.0.0"
  }
}